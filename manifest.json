{
  "name": "CentOS notification",
  "version": "0.1.0",
  "manifest_version": 2,

  "description": "CentOSの重要な更新の通知をするChrome拡張です",

  "icons": {
    "16": "image/icon16.png",
    "64": "image/icon64.png",
    "128": "image/icon128.png"
  },

  "permissions": [
    "https://lists.centos.org/pipermail/centos-announce/*"
  ],

  "background": {
    "scripts": ["js/common.js", "js/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://lists.centos.org/*"],
      "js": ["js/contentScript.js"]
    }
  ],

  "browser_action": {
    "default_icon": {
      "19": "image/icon19.png",
      "38": "image/icon38.png"
    },
    "default_title": "CentOS notification",
    "default_popup": "popup.html"
  }
}
