{
  "name": "CentOS notification",
  "version": "0.1.0",
  "manifest_version": 2,

  "description": "CentOSの重要な更新の通知をするChrome拡張です",

  "icons": {
    "16": "src/image/icon16.png",
    "64": "src/image/icon64.png",
    "128": "src/image/icon128.png"
  },

  "permissions": [
    "notifications",
    "https://lists.centos.org/pipermail/centos-announce/*"
  ],

  "options_page": "src/html/options.html",

  "background": {
    "scripts": [
      "src/js/common.js",
      "src/js/model/config.js",
      "src/js/background.js"
    ],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["https://lists.centos.org/*"],
      "js": ["src/js/contentScript.js"]
    }
  ],

  "browser_action": {
    "default_icon": {
      "19": "src/image/icon19.png",
      "38": "src/image/icon38.png"
    },
    "default_title": "CentOS notification",
    "default_popup": "src/html/popup.html"
  }
}
